<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="settlement_document">
        <t t-call="web.html_container">
            <div class="page" style="margin-top:0px;">
                <t t-foreach="docs" t-as="d">
                    <div style="width:33.3%;display: inline-block;">
                        <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)" style="width:60%;margin:0 auto;"/>
                    </div>
                    <div style="width:33.3%;display:inline-block;">
                        <table style="font-size:10px;border:3px solid;">
                            <tr>
                                <td>Declaracion,Transacción,Renuncia,Desistimiento de Acciones</td>
                            </tr>
                            <tr>
                                <td>Pago y Finiquito</td>
                            </tr>
                            <tr>
                                <td>
                                    <span t-field="d.employee_id.company_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span t-field="d.employee_id.company_id.invoice_rut"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span t-field="d.employee_id.company_id.street"/> <span t-field="d.employee_id.company_id.city"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div style="height:40px;"></div>
                    <div>
                        <table style="font-size:12px;width:10%;">
                            <tr style="text-align:center;">
                                <td><span t-field="d.employee_id.company_id.city"/></td>
                            </tr>
                            <tr style="text-align:center;">
                                <td style="border-top: 1px solid black;">Lugar de suscripción</td>
                            </tr>
                        </table>
                        <table style="font-size:12px;width:10%;">
                            <tr style="text-align:center;">
                                <td><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/> </td>
                            </tr>
                            <tr style="text-align:center;">
                                <td style="border-top: 1px solid black;">Fecha de Suscripción</td>
                            </tr>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>
    <record id="paper_format_letter_custom" model="report.paperformat">
        <field name="name">Carta Custom</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="footer_line" eval="False"/>
        <field name="dpi">90</field>
    </record>
    <report id="action_settlement" model="custom.settlement" menu="True" string="Finiquito (Documento)"
            report_type="qweb-pdf" paperformat="paper_format_letter_custom"
            name="dimabe_billing_rut.settlement_document"/>
</odoo>